<h1>Listing memories</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>Epitaph</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @memories.each do |memory| %>
  <tr>
    <td><%= memory.first_name %></td>
    <td><%= memory.middle_name %></td>
    <td><%= memory.last_name %></td>
    <td><%= memory.epitaph %></td>
    <td><%= memory.description %></td>
    <td><%= link_to 'Show', memory %></td>
    <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
    <td><%= link_to 'Destroy', memory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

