<h1>Your Memories</h1>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Epitaph</th>
    <th>Date of birth</th>
    <th>Date of death</th>
    <th></th>
	<th></th>
    <th></th>
    <th></th>
  </tr>

<% @memories.each do |memory| %>
  <tr>
    <td><%= memory.full_name %></td>
    <td><%= memory.epitaph %></td>
    <td><%= memory.date_of_birth %></td>
    <td><%= memory.date_of_death %></td>
	<td><%= link_to "Manage Funerals", memory_funerals_path(memory) %>
    <td><%= link_to 'View Page', memory %></td>
    <td><%= link_to 'Edit Page', edit_memory_path(memory) %></td>
    <td><%= link_to 'Destroy', memory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create New Memory', new_memory_path, :class => "button" %>
