<!DOCTYPE html>
<html>
<head>
  <title>Memorial<% if @title%>: <%= @title %><% end %></title>
  <%= stylesheet_link_tag "styles" %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "modernizr-1.6.min" %>
</head>
<body>
<% flash.each do |key, value| %>
	<div class="flash <%= key %>"><%= value %></div>
<% end %>
<div id="middle">
	<header>
		<section class="authlinks">
			<% if signed_in? %>
				<%= link_to "Logout", logout_path, :method => :delete %>
			<% else %>
				<%= link_to "Sign Up", signup_path %> | 
				<%= link_to "Login", login_path %>
			<% end %>
		</section>
		<h1>
			<%= link_to "Memorial", root_path %>
		</h1>
	</header>
	<nav>
		<ul>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "About", pages_about_path %></li>
			<li><%= link_to "Contact", pages_contact_path %></li>
			<% if signed_in? %>
				<li><%= link_to "Logout", logout_path, :method => :delete %></li>
			<% else %>
				<li><%= link_to "Sign Up", signup_path %></li>
				<li><%= link_to "Login", login_path %></li>
			<% end %>
		</ul>
	</nav>
	
	<section class="primary">
	
		<section class="sidebar">
			<%= yield :sidebar %>
		</section>
		
		<section class="content">
			<%= yield %>
		</section>
		
		<div style="clear:both;"></div>
	</section>
	
	<div style="padding:5px;background-color:maroon;color:white;margin-top:15px;">
		<%= debug(params) if Rails.env.development? %>
	</div>
</div>

<%= javascript_include_tag "jquery-1.4.4.min" %>
<%= javascript_include_tag "application" %>
<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->

</body>
</html>
